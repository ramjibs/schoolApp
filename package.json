{
  "name": "school",
  "version": "1.0.0",
  "description": "App mainly focus on School IT work, reduces any paper work on school, digitalize school records, creates a bridge between school, teacher, parent and produces live data to the end users.",
  "main": "server.js",
  "scripts": {
    "start": "node ./server.js",
    "start-server": "nodemon server.js",
    "restart": "pm2 startOrRestart ecosystem.config.js",
    "deploy": "pm2 deploy ecosystem.config.js production",
    "start-client": "cd %school-client% && npm run start",
    "start-dev": "concurrently \"npm run start-server\" \"npm run start-client\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "ramji, jithil,senthil,mohan",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.20.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.5",
    "nodemailer": "^6.3.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "debug": "^4.1.1",
    "nodemon": "^1.19.1",
    "pm2": "^4.1.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  }
}
